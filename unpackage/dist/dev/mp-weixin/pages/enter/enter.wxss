.box .box-top {
  text-align: center;
  font-size: 26px;
  padding: 20px 0;
}
.box .box-center .t-b {
  text-align: left;
  font-size: 42rpx;
  color: #ffffff;
  padding: 130rpx 0 0 70rpx;
  font-weight: bold;
  line-height: 70rpx;
}
.box .box-center .t-login .t-c {
  position: absolute;
  right: 22rpx;
  top: 22rpx;
  background: #5677fc;
  color: #fff;
  font-size: 24rpx;
  border-radius: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 25rpx;
}
.box .box-center .t-login .t-d {
  text-align: center;
  color: #999;
  margin: 80rpx 0;
}
.box .box-center .t-login .t-e {
  text-align: center;
  width: 250rpx;
  margin: 80rpx auto 0;
}
.box .box-center .t-login .t-g {
  float: left;
  width: 50%;
}
.box .box-center .t-login .t-e image {
  width: 50rpx;
  height: 50rpx;
}
.box .box-bottom {
  width: 100%;
  position: fixed;
  bottom: 10px;
}
.box .box-bottom .box-bottom1 {
  margin: auto;
  width: 80%;
  display: flex;
}
.box .box-bottom .box-bottom1 .box-bottom1-left {
  margin-top: -4px;
}
